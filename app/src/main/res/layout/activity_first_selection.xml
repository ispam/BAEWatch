<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partner"
            android:id="@+id/textViewMan"
            android:textColor="#000000"
            android:textSize="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:id="@+id/imageButtonPartner"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:id="@+id/textViewFriends"
            android:textColor="#000000"
            android:textSize="24dp"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:id="@+id/imageButtonFriends"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Family"
            android:id="@+id/textViewWoman"
            android:textSize="24dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:id="@+id/imageButtonFamily"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pets"
            android:id="@+id/textViewPets"
            android:textColor="#000000"
            android:textSize="24dp"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:id="@+id/imageButtonPets"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</LinearLayout>

